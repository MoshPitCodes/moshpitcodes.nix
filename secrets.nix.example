# NixOS Secrets Configuration Template
# Copy this file to secrets.nix and fill in your actual values
# This file should be git-ignored for security

{
  # User configuration
  username = "testuser";
  # Generate password hash with: echo 'your-password' | mkpasswd -m sha-512 -s
  # Or use: nix-shell -p mkpasswd --run "echo 'your-password' | mkpasswd -m sha-512 -s"
  hashedPassword = "$6$rounds=500000$salt$hash...";
  reponame = "moshpitcodes.nix";

  # Git configuration
  git = {
    userName = "Test User";
    userEmail = "test@example.com";
    user.signingkey = "testkey";
  };

  # Network configuration
  network = {
    wifiSSID = "";
    wifiPassword = "";
  };

  samba = {
    username = "sambauser";
    password = "sambapassword";
  };
  
  # API keys for development tools
  apiKeys = {
    anthropic = "";
    openai = "";
  };

  # SSH Keys configuration
  sshKeys = {
    # Source directory containing SSH keys (adjust per system)
    # WSL example: "/mnt/c/Users/YourUsername/.ssh"
    # Linux example: "/path/to/backup/ssh/keys"
    # Leave empty ("") to skip automatic key copying
    sourceDir = "";

    # List of key files to copy (both private and public keys will be copied)
    # Common examples:
    keys = [
      "id_ed25519"
      "id_rsa"
      "id_ecdsa"
      # Add custom-named keys as needed:
      # "id_ed25519_github"
      # "id_ed25519_work"
    ];
  };

  # Paths to backup configuration directories
  ghConfigDir = "/path/to/your/backup/.config/gh";
  gpgDir = "/path/to/your/backup/.gnupg";

  # Alternative approach using environment variables
  # Set these in your shell or use a secret management tool like Doppler
  # Example:
  # export NIXOS_USERNAME="your-username"
  # export GIT_USERNAME="your-git-username"
  # export GIT_EMAIL="your-email@example.com"
  # export WIFI_SSID="your-wifi-network"
  # export WIFI_PASSWORD="your-wifi-password"
  # export ANTHROPIC_API_KEY="your-claude-api-key"
  # export OPENAI_API_KEY="your-openai-api-key"
}
