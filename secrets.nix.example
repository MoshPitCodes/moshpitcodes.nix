# secrets.nix.example - Template for secrets.nix
# Copy this file to secrets.nix and fill in your values
# secrets.nix is git-ignored and should never be committed
{
  # User configuration
  username = "your-username";
  hashedPassword = ""; # Generate with: mkpasswd -m sha-512

  # Repository name
  reponame = "your-repo-name";

  # Git configuration
  git = {
    userName = "Your Name";
    userEmail = "your@email.com";
    user.signingkey = ""; # Optional: GPG key ID for commit signing
  };

  # Network configuration
  network = {
    wifiSSID = "";
    wifiPassword = "";
  };

  # NAS configuration (for nas-mount.nix - host and share info)
  nas = {
    host = "192.168.1.100"; # NAS IP address
    share = "share_name"; # SMB/CIFS share name
    username = "nas-user";
    password = "nas-password";
  };

  # Samba credentials (for samba.nix - credential file creation)
  samba = {
    username = "nas-user"; # Usually same as nas.username
    password = "nas-password"; # Usually same as nas.password
    domain = "WORKGROUP"; # SMB domain/workgroup
  };

  # API Keys for development tools
  apiKeys = {
    anthropic = "";
    openai = "";
  };

  # SSH keys configuration (VMware/desktop-specific)
  # VMware guest uses HGFS shared folder:
  # sshKeys = {
  #   sourceDir = "/mnt/hgfs/Z/Coding/SecretsBackup2025/.ssh";
  #   keys = [
  #     "id_ed25519_github"
  #     "id_ed25519_proxmox"
  #     "id_ed25519_proxmox_terraform"
  #   ];
  # };
  # gpgDir = "/mnt/hgfs/Z/Coding/SecretsBackup2025/.gnupg";

  # Desktop uses NAS CIFS mount:
  # sshKeys = {
  #   sourceDir = "/mnt/ugreen-nas/Coding/SecretsBackup2025/.ssh";
  #   keys = [
  #     "id_ed25519_github"
  #     "id_ed25519_proxmox"
  #     "id_ed25519_proxmox_terraform"
  #   ];
  # };
  # gpgDir = "/mnt/ugreen-nas/Coding/SecretsBackup2025/.gnupg";

  # GitHub CLI config backup directory (for gh auth restore on rebuild)
  # ghConfigDir = "/mnt/ugreen-nas/Coding/SecretsBackup2025/.config/gh";

  # Backup configuration
  backup = {
    nasBackupPath = ""; # VMware: "/mnt/hgfs/Z/Coding/Repositories"
    # Desktop: "/mnt/ugreen-nas/Coding/Repositories"
  };
}
