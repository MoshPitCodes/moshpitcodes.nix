{
	"permissions": {
		"allow": [
			"WebSearch",
			"Bash(ssh:*)",
			"Bash(git status)",
			"Bash(git diff:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(git push:*)",
			"Bash(git pull:*)",
			"Bash(git log:*)",
			"Bash(git checkout:*)",
			"Bash(git branch:*)",
			"Bash(git rev-parse --git-dir)",
			"Bash(gh pr:*)"
		],
		"deny": [
			"Read(./.env)",
			"Read(./.env.*)",
			"Read(./secrets/**)",
			"Read(./secrets.nix)",
			"Read(./config/credentials.json)",
			"Bash(rm -rf:*)",
			"Bash(sudo:*)"
		],
		"ask": []
	},
	"env": {
		"CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8000",
		"CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "0",
		"CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
		"DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
		"DISABLE_COST_WARNINGS": "1",
		"USE_BUILTIN_RIPGREP": "1",
		"CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
		"DISABLE_TELEMETRY": "1",
		"DISABLE_ERROR_REPORTING": "1",
		"DISABLE_BUG_COMMAND": "1",
		"DISABLE_AUTOUPDATER": "1"
	},
	"statusLine": {
		"type": "command",
		"command": "$CLAUDE_PROJECT_DIR/.opencode/hooks/statusline.sh"
	},
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "uv run $CLAUDE_PROJECT_DIR/.opencode/hooks/pre_tool_use.py"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "uv run $CLAUDE_PROJECT_DIR/.opencode/hooks/validators/typescript_validator.py"
					},
					{
						"type": "command",
						"command": "uv run $CLAUDE_PROJECT_DIR/.opencode/hooks/validators/go_validator.py"
					}
				]
			}
		],
		"Setup": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "uv run $CLAUDE_PROJECT_DIR/.opencode/hooks/setup.py"
					}
				]
			}
		]
	}
}
