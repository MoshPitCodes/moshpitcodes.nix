{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default Renovate configuration template for dependency management",
  "extends": [
    "config:best-practices",
    "schedule:weekly",
    ":semanticCommits",
    ":separateMajorReleases",
    "group:recommended"
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "minimumReleaseAge": "3 days",
  "timezone": "America/New_York",
  "schedule": ["before 9am on monday"],
  "reviewers": ["MoshPitLabs"],
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "addLabels": ["github-actions"],
      "automerge": true
    },
    {
      "description": "Group Python dependencies",
      "matchManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry"],
      "groupName": "Python Dependencies",
      "addLabels": ["python"]
    },
    {
      "description": "Group Node.js dependencies",
      "matchManagers": ["npm", "yarn", "pnpm"],
      "groupName": "Node.js Dependencies",
      "addLabels": ["nodejs"]
    },
    {
      "description": "Group Go dependencies",
      "matchManagers": ["gomod"],
      "groupName": "Go Dependencies",
      "addLabels": ["go"]
    },
    {
      "description": "Group Docker dependencies",
      "matchManagers": ["dockerfile", "docker-compose"],
      "groupName": "Docker Dependencies",
      "addLabels": ["docker"]
    },
    {
      "description": "Group Terraform dependencies",
      "matchManagers": ["terraform", "terraform-version"],
      "groupName": "Terraform Dependencies",
      "addLabels": ["terraform"]
    },
    {
      "description": "Group Kubernetes dependencies",
      "matchManagers": ["kubernetes", "helm-values", "helmfile"],
      "groupName": "Kubernetes Dependencies",
      "addLabels": ["kubernetes"]
    },
    {
      "description": "Automerge minor and patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Automerge patch updates for production dependencies",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Do not automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["breaking-change"]
    },
    {
      "description": "Delay major Ansible updates for compatibility review",
      "matchPackageNames": ["ansible", "ansible-core"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true,
    "minimumReleaseAge": "0 days"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on the first day of the month"]
  }
}
